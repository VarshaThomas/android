<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="448dp"
        android:layout_height="102dp"
        android:text="LETS CALCULATE"
        android:textColor="#DEB499"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="result" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:rowOrderPreserved="false">

        <!-- Number buttons 1â€“3 -->
        <Button android:id="@+id/btn1" android:text="1"  android:backgroundTint="#EECEDA"/>
        <Button android:id="@+id/btn2" android:text="2"  android:backgroundTint="#EECEDA"/>
        <Button android:id="@+id/btn3" android:backgroundTint="#EECEDA"
            android:layout_row="0"
            android:layout_column="2"
            android:text="3" />

        <!-- Operators -->

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:backgroundTint="#EECEDA"
            android:text="+" />

        <Button android:id="@+id/btn4" android:text="4" android:backgroundTint="#EECEDA" />
        <Button android:id="@+id/btn5" android:text="5" android:backgroundTint="#EECEDA" />
        <Button android:id="@+id/btn6" android:text="6" android:backgroundTint="#EECEDA" />
        <Button android:id="@+id/btnSubtract" android:text="-"  android:backgroundTint="#EECEDA"/>
        <Button android:id="@+id/btn7" android:text="7" android:backgroundTint="#EECEDA" />
        <Button android:id="@+id/btn8" android:text="8" android:backgroundTint="#EECEDA" />
        <Button android:id="@+id/btn9" android:text="9" android:backgroundTint="#EECEDA" />
        <Button android:id="@+id/btnMultiply" android:text="*" android:backgroundTint="#EECEDA" />
        <Button android:id="@+id/btnClear" android:text="C"  android:backgroundTint="#EECEDA"/>
        <Button android:id="@+id/btn0" android:text="0" android:backgroundTint="#EECEDA" />
        <Button android:id="@+id/btnEqual" android:text="=" android:backgroundTint="#EECEDA" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_row="3"
            android:layout_column="3"
            android:text="/" android:backgroundTint="#EECEDA" />
    </GridLayout>

</LinearLayout>
